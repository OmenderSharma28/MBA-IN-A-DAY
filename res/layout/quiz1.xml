<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="#8B0000"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
<TextView 
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="1of10"
android:gravity="right"
android:textStyle="italic"
android:textSize="25px"

/>
<TextView
android:id="@+id/textview"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="25dp"
android:textStyle="bold"
android:textColor="#ffffff"
android:text="Ques:-What are the primary functions of Managers?"
android:background="#800000"/>
<RadioGroup
android:id="@+id/rg"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
>
<RadioButton
android:id="@+id/rb1"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:text="     developing,merging,budgeting."
android:background="#8B0000" android:textSize="25dp" android:textColor="#ffffff"/>
<RadioButton
android:id="@+id/rb2"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:text="    planning,organizing,leading,controlling."
android:background="#8B0000" android:textColor="#ffffff" android:textSize="25dp"/>
<RadioButton
android:id="@+id/rb3"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#8B0000" android:textSize="25dp" android:textStyle="normal" android:textColor="#ffffff" android:text="     meeting,networking"/>
<RadioButton
android:id="@+id/rb4"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:text="      planning,writing,selling."
android:background="#8B0000" android:textSize="26dp" android:textColor="#ffffff" android:textStyle="normal"/>
</RadioGroup>
<ImageButton
android:id="@+id/imgbtn"
android:src="@drawable/nextbutton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"/>
</LinearLayout>
